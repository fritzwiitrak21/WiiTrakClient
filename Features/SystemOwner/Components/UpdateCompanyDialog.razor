

 <MudDialog>
    <DialogContent>              
        <div style="width: 400px;"></div>
          
        <MudForm Model="@Company">   
            <MudTextField class="my-6" @bind-Value="Company.Name" Label="Name" Variant="Variant.Text"></MudTextField>  
            <MudTextField class="my-6" @bind-Value="Company.StreetAddress1" Label="Street Address 1" Variant="Variant.Text"></MudTextField>  
            <MudTextField class="my-6" @bind-Value="Company.Name" Label="Street Address 2" Variant="Variant.Text"></MudTextField>  
            <MudTextField class="my-6" @bind-Value="Company.City" Label="City" Variant="Variant.Text"></MudTextField>  
            <MudTextField class="my-6" @bind-Value="Company.State" Label="State" Variant="Variant.Text"></MudTextField>  
            <MudTextField class="my-6" @bind-Value="Company.PostalCode" Label="ZipCode" Variant="Variant.Text"></MudTextField>  
            <MudTextField class="my-6" @bind-Value="Company.Email" Label="Email" Variant="Variant.Text"></MudTextField>  
            <MudTextField class="my-6" @bind-Value="Company.PhonePrimary" Label="Phone" Variant="Variant.Text"></MudTextField>                
        </MudForm>
        
      
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [Parameter]
    public CompanyDto? Company {get; set;}
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    protected override void OnParametersSet() {
            
    }

    void Submit() 
    { 
        MudDialog.Close(DialogResult.Ok(true)); 
    }
    void Cancel() => MudDialog.Cancel();
}
@namespace WiiTrakClient.Features.SystemOwner.Components

 <MudDialog>
    <DialogContent>              
        <div style="width: 400px;height:450px;overflow: auto;">
            <EditForm Model="@Company" OnValidSubmit="Submit">   
                <MudTextField Class="my-6" @bind-Value="Company.Name" For="@(()=>Company.Name)" Label="Name" Variant="Variant.Text"></MudTextField>  
                <MudTextField Class="my-6" @bind-Value="Company.StreetAddress1" For="@(()=>Company.StreetAddress1)" Label="Street Address 1" Variant="Variant.Text"></MudTextField>  
                <MudTextField Class="my-6" @bind-Value="Company.StreetAddress2" For="@(()=>Company.StreetAddress2)" Label="Street Address 2" Variant="Variant.Text"></MudTextField>  
                <MudTextField Class="my-6" @bind-Value="Company.City" For="@(()=>Company.City)" Label="City" Variant="Variant.Text"></MudTextField>  
                <MudTextField Class="my-6" @bind-Value="Company.State" For="@(()=>Company.State)" Label="State" Variant="Variant.Text"></MudTextField>  
                <MudTextField Class="my-6" @bind-Value="Company.PostalCode" For="@(()=>Company.PostalCode)" Label="ZipCode" Variant="Variant.Text"></MudTextField>  
                <MudTextField Class="my-6" @bind-Value="Company.Email" For="@(()=>Company.Email)" Label="Email" Variant="Variant.Text"></MudTextField>  
                <MudTextField Class="my-6" @bind-Value="Company.PhonePrimary" For="@(()=>Company.PhonePrimary)" Label="Phone" Variant="Variant.Text"></MudTextField>
                <MudCheckBox @bind-Checked="Company.CannotHaveChildren" Label="Do Not Allow Sub Companies" Color="Color.Primary"></MudCheckBox> 
            </EditForm>
        </div>
    </DialogContent>
    <DialogActions>
        @*<MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>*@
        @if (formInvalid)
                {
                    <MudButton OnClick="Cancel">Cancel</MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit" Disabled=true Class="ml-auto">Update</MudButton>
                }
                else
                {
                    <MudButton OnClick="Cancel">Cancel</MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit" Class="ml-auto">Update</MudButton>
                }   
    </DialogActions>
</MudDialog>


@code {
    [Parameter]
    public CompanyDto? Company {get; set;}
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    private bool formInvalid = false;
    protected override void OnParametersSet() {
            
    }

    void Submit() 
    { 
        formInvalid = false;
        MudDialog.Close(DialogResult.Ok(true)); 
    }
    void Cancel() => MudDialog.Cancel();
}
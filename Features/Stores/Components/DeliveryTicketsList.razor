@using WiiTrakClient.Features.Stores.Components

@namespace WiiTrakClient.Features.Stores.Components

<MudTable Items="@DeliveryTickets" Hover="true" SortLabel="Sort By" Striped="true" Bordered="false" Loading="@_listIsLoading"
          LoadingProgressColor="Color.Primary">
    <HeaderContent>
        <MudTh>
            Photo
        </MudTh>
        <MudTh>
            <MudTableSortLabel InitialDirection="@SortDirection.Ascending"
                               SortBy="new Func<DeliveryTicketDto, object>(x => x.DeliveryTicketNumber)">
                Ticket Number
            </MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<DeliveryTicketDto, object>(x=>x.DeliveredAt)">
                Delivery Date
            </MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<DeliveryTicketDto, object>(x=>x.NumberOfCarts)">
                Number of Carts
            </MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<DeliveryTicketDto, object>(x=>x.StoreName)">
                Store
            </MudTableSortLabel>
        </MudTh>
        <MudTh></MudTh>
    </HeaderContent>

    <RowTemplate>
        <MudTd DataLabel="Photo">
            <img src="@context.PicUrl" width="48" height="48" />
        </MudTd>
        <MudTd DataLabel="TicketNumber">@context.DeliveryTicketNumber</MudTd>
        <MudTd DataLabel="DeliveryDate">@($"{context.DeliveredAt.ToShortDateString()}")</MudTd>
        <MudTd DataLabel="NumberOfCarts">@context.NumberOfCarts</MudTd>
        <MudTd DataLabel="Store">@($"{context.StoreNumber} - {context.StoreName}")</MudTd>
         <MudTd DataLabel="">
             @if(context.SignOffRequired == false || context.ApprovedByStore == true)
             {
                 <MudButton StartIcon="@Icons.Material.Filled.Details" Variant="Variant.Filled" Color="Color.Primary"
                    OnClick="((e) => OpenDeliveryTicketDialog(context))">Details
                </MudButton>
            }
            else
            {
                <MudButton StartIcon="@Icons.Material.Filled.RateReview" Variant="Variant.Filled" Color="Color.Primary"
                    OnClick="((e) => OpenSignatureDeliveryTicketDialog(context))">Needs Signature
                </MudButton>
            }
        </MudTd> 
    </RowTemplate>
    <PagerContent>
        <MudTablePager PageSizeOptions="new int[]{50, 100}" />
    </PagerContent>
</MudTable>

@namespace WiiTrakClient.Features.Companies.Components

 
<MudDialog>
    <DialogContent>              
        <div style="width: 400px;height:450px;overflow: auto;">
            <MudForm Model="@NewDriver">   
                <MudTextField class="my-6" @bind-Value="NewDriver.FirstName" Label="First Name" Variant="Variant.Text"></MudTextField>  
                <MudTextField class="my-6" @bind-Value="NewDriver.LastName" Label="Last Name" Variant="Variant.Text"></MudTextField>  
                <MudTextField class="my-6" @bind-Value="NewDriver.Email" Label="Email" Variant="Variant.Text"></MudTextField>  
                <MudTextField class="my-6" @bind-Value="NewDriver.Phone" Label="Phone" Variant="Variant.Text"></MudTextField>  
                <MudTextField class="my-6" @bind-Value="NewDriver.StreetAddress1" Label="Street Address 1" Variant="Variant.Text"></MudTextField>
                <MudTextField class="my-6" @bind-Value="NewDriver.StreetAddress2" Label="Street Address 2" Variant="Variant.Text"></MudTextField>
                <MudTextField class="my-6" @bind-Value="NewDriver.City" Label="City" Variant="Variant.Text"></MudTextField>
                <MudTextField class="my-6" @bind-Value="NewDriver.State" Label="State" Variant="Variant.Text"></MudTextField>
                <MudTextField class="my-6" @bind-Value="NewDriver.CountryCode" Label="Country Code" Variant="Variant.Text"></MudTextField>
                <MudTextField class="my-6" @bind-Value="NewDriver.PostalCode" Label="Postal Code" Variant="Variant.Text"></MudTextField>
            </MudForm>
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DriverCreationDto? NewDriver {get; set;}

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    protected override void OnParametersSet() {
            
    }

    void Submit() 
    { 
        MudDialog.Close(DialogResult.Ok(true)); 
    }
    void Cancel() => MudDialog.Cancel();
}
@using WiiTrakClient.Features.Drivers.Components
@using WiiTrakClient.Features.Drivers.Models

@namespace WiiTrakClient.Features.Drivers.Components

<MudTable Items="@WorkOrders" Hover="true" SortLabel="Sort By" Striped="true" Bordered="false" Loading="@_listIsLoading"
    LoadingProgressColor="Color.Primary">
    <HeaderContent>
        @* <MudTh>
            Photo
        </MudTh> *@
        <MudTh>
            <MudTableSortLabel InitialDirection="@SortDirection.Ascending"
                SortBy="new Func<WorkOrderDto, object>(x => x.WorkOrderNumber)">Work Order Number
            </MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel 
                SortBy="new Func<WorkOrderDto, object>(x=>x.Issue)">Issue                    
            </MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel 
                SortBy="new Func<WorkOrderDto, object>(x=>x.Notes)">Notes
            </MudTableSortLabel>
        </MudTh>
        <MudTh></MudTh>
        <MudTh></MudTh>
    </HeaderContent>

    <RowTemplate>
        @* <MudTd DataLabel="Photo">
            <img src="@context.PicUrl" width="48" height="48" />
        </MudTd> *@
        <MudTd DataLabel="WorkOrderNumber">@context.WorkOrderNumber</MudTd>
        <MudTd DataLabel="Issue">@context.Issue</MudTd>
        <MudTd DataLabel="Notes">@context.Notes</MudTd>
        @* <MudTd DataLabel="Store">@($"{context.StoreNumber} - {context.StoreName}")</MudTd> *@
        @* <MudTd DataLabel="">
            <MudButton StartIcon="@Icons.Material.Filled.Update" Variant="Variant.Filled" Color="Color.Primary"
                OnClick="((e) => OpenUpdateDeliveryTicketDialog(context))">Update
            </MudButton>
        </MudTd> *@
    </RowTemplate>
    <PagerContent>
        <MudTablePager PageSizeOptions="new int[]{50, 100}" />
    </PagerContent>
</MudTable>

